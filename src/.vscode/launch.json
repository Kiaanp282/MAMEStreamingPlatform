{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "clang build and debug mame64",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/mame64d",
			"args": [
				"-streamingserver",
				"-window",
				"-video", "accel",
				"-sound", "sdl",
				"-resolution", "640x480@60"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",			
			"preLaunchTask": "Build from Makefile",
			"miDebuggerPath": "/usr/bin/lldb"
		}
	]
}