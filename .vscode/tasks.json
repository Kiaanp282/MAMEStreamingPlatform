{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build from Makefile",
            "type": "shell",
            "command": "make",
            "args": [
                "SOURCES=src/mame/drivers/cps3.cpp",
                "IGNORE_GIT=1",
                "-j3"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "Build streamer",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "Streaming/main.cpp",
                "-o",
                "${workspaceFolder}/Streaming/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }            
        }
    ]
}